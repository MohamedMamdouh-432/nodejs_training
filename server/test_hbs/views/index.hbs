<h1>{{title}}</h1>
<h4>Welcome to Our Page üëç Author: Mohamed Mamdouh </h4>
<form action="/users/info" method="post">
    <input type="text" name="name" placeholder="Enter Name" /> <br><br>
    <input type="text" name="phone" placeholder="Enter Phone" /> <br><br>
    <button type="submit">Submit</button>
</form>

{{#if success}}
    <h3>Request is Successful</h3>
{{else}}
    <h3>Request is Failed</h3>
    <ul>
        {{#each errors}}
            <li class="errmsg">{{this.msg}}</li>
        {{/each}}
    </ul>
{{/if}}